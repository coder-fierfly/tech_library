<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<StackPane prefHeight="198.0" prefWidth="294.0" xmlns="http://javafx.com/javafx/17.0.2-ea"
           xmlns:fx="http://javafx.com/fxml/1" fx:controller="LoginController">
    <children>
        <StackPane>
            <children>
                <VBox spacing="10.0">
                    <children>
                        <GridPane prefHeight="81.0" prefWidth="274.0">
                            <children>
                                <Label text="Логин:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                                <Label text="Пароль:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                                <TextField fx:id="user" promptText="Use to login" text="логин"
                                           GridPane.columnIndex="1" GridPane.rowIndex="0"/>
                                <TextField fx:id="password" promptText="Use to login" text="пароль"
                                           GridPane.columnIndex="1" GridPane.rowIndex="1"/>
                            </children>
                            <columnConstraints>
                                <ColumnConstraints hgrow="SOMETIMES" maxWidth="148.0" minWidth="10.0"
                                                   prefWidth="109.0"/>
                                <ColumnConstraints hgrow="SOMETIMES" maxWidth="228.0" minWidth="10.0"
                                                   prefWidth="189.0"/>
                            </columnConstraints>
                            <rowConstraints>
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                            </rowConstraints>
                        </GridPane>
                        <StackPane prefHeight="78.0" prefWidth="274.0">
                            <children>
                                <Button fx:id="loginButton" alignment="CENTER" defaultButton="true"
                                        mnemonicParsing="false" text="Ok" StackPane.alignment="BASELINE_RIGHT"/>
                                <Button fx:id="guest" alignment="TOP_LEFT" mnemonicParsing="false" text="Гость"
                                        StackPane.alignment="BOTTOM_LEFT">
                                    <opaqueInsets>
                                        <Insets/>
                                    </opaqueInsets>
                                </Button>
                                <Text fx:id="textReg" strokeType="OUTSIDE" strokeWidth="0.0" text="Text"
                                      wrappingWidth="117.1367175579071" StackPane.alignment="TOP_CENTER"/>
                                <Button fx:id="buttonReg" mnemonicParsing="false" text="Регистрация" StackPane.alignment="BOTTOM_CENTER"/>
                            </children>
                        </StackPane>
                    </children>
                </VBox>
            </children>
        </StackPane>
    </children>
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
    </padding>
</StackPane>
